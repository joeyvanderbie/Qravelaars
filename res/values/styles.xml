<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<color name="qravelBlauw">#154ba3</color>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        
	    
      	             <item name="android:background">@color/qravelBlauw</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
      	   <item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@color/qravelBlauw</item>
      	  <item name="android:colorBackground">@color/qravelBlauw</item>
	    <item name="android:prompt">@android:color/background_light</item>
    <item name="android:alertDialogStyle">@style/MyOpaqueAlertDialog</item>
</style>

<style name="MyOpaqueAlertDialog">
    <item name="android:fullDark">@android:color/background_light</item>
    <item name="android:topDark">@android:color/background_light</item>
    <item name="android:centerDark">@android:color/background_light</item>
    <item name="android:bottomDark">@android:color/background_light</item>
    <item name="android:fullBright">@android:color/background_light</item>
    <item name="android:topBright">@android:color/background_light</item>
    <item name="android:centerBright">@android:color/background_light</item>
    <item name="android:bottomBright">@android:color/background_light</item>
    <item name="android:bottomMedium">@android:color/background_light</item>
    <item name="android:centerMedium">@android:color/background_light</item>
</style>
    

</resources>